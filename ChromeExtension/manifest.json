{
  "description": "Otomatn irons your Persian text! Fixes half-spaces and grammar automatically.",
  "manifest_version": 3,
  "name": "Otomatn | اتومتن",
  "version": "2.0",
  "homepage_url": "https://github.com/mr-shady/halfspace",
  "icons": {
    "48": "icons/logo-48.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "contextMenus",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "icons/logo-32.png",
    "default_title": "Otomatn: Persian Text Refiner",
    "default_popup": "popup/popup.html"
  }
}